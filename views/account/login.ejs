<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header.ejs') %>

    <body>
        <section class="section-border border-primary">
            <div class="container d-flex flex-column">
                <div class="row align-items-center justify-content-center no-gutters min-vh-100">
                    <div class="col-8 col-md-6 col-lg-7 offset-md-1 order-md-2 mt-auto mt-md-0 pt-8 pb-4 py-md-11">

                        <!-- Image -->
                        <img src="/assets/images/illustration-2.png" alt="..." class="img-fluid">

                    </div>
                    <div class="col-12 col-md-5 col-lg-4 order-md-1 mb-auto mb-md-0 pb-8 py-md-11">

                        <!-- Heading -->
                        <h1 class="sign-in-text">
                            Sign in
                        </h1>

                        <!-- Text -->
                        <p class="mb-32 text-center text-muted">
                            Remote Work is the Future, but Should You Go Remote?.
                        </p>

                        <%if (error) { %>
                            <div class="m-b-20 m-t-20  alert danger">
                                <%= error%>
                            </div>
                            <% } %>

                                <%if (varibles.error) { %>
                                    <div class="m-b-20 m-t-20  alert danger">
                                        <%= varibles.error%>
                                    </div>
                                    <% } %>

                                        <!-- Form -->
                                        <form class="mb-6" action="<%= varibles.linkloginonly  %>" method="POST"
                                            name="sendin">
                                            <input type="hidden" name="dst" value="<%= varibles.linkorig %>" />
                                            <input type="hidden" name="popup" value="true" />
                                            <!-- Username -->
                                            <div class="form-group">
                                                <label for="username">
                                                    Username
                                                </label>
                                                <input tabindex="0" name="username" class="form-control" id="username"
                                                    placeholder="Enter your username">
                                            </div>

                                            <div class="form-group">
                                                <label for="password">
                                                    Password
                                                </label>
                                                <input tabindex="0" name="password" class="form-control" id="password"
                                                    placeholder="Enter your password">
                                            </div>

                                            <!-- Submit -->
                                            <button class="btn primary full-width" type="submit">
                                                Next
                                            </button>
                                        </form>

                                        <form action="/login" method="POST" name="account">

                                            <input type="hidden" name="mac" value="<%= varibles.mac %>">
                                            <input type="hidden" name="ip" value="<%= varibles.ip %>">
                                            <input type="hidden" name="username" value="<%= varibles.username %>">
                                            <input type="hidden" name="link-login" value="<%= varibles.linkorig %>">
                                            <input type="hidden" name="link-orig" value="<%= varibles.linkorig %>">
                                            <input type="hidden" name="error" value="<%= varibles.error %>">
                                            <input type="hidden" name="trial" value="<%= varibles.trial %>">
                                            <input type="hidden" name="chap-id" value="<%= varibles.chapid %>">
                                            <input type="hidden" name="chap-challenge"
                                                value="<%= varibles.chapchallenge %>">
                                            <input type="hidden" name="link-login-only"
                                                value="<%= varibles.linkloginonly %>">
                                            <input type="hidden" name="link-orig-esc"
                                                value="<%= varibles.linkorigesc %>">
                                            <input type="hidden" name="mac-esc" value="<%= varibles.macesc %>">
                                            <input type="hidden" name="identity" value="<%= varibles.identity %>">
                                            <input type="hidden" name="bytes-in-nice"
                                                value="<%= varibles.bytesinnice %>">
                                            <input type="hidden" name="bytes-out-nice"
                                                value="<%= varibles.bytesoutnice %>">
                                            <input type="hidden" name="session-time-left"
                                                value="<%= varibles.sessiontimeleft %>">
                                            <input type="hidden" name="uptime" value="<%= varibles.uptime %>">
                                            <input type="hidden" name="refresh-timeout"
                                                value="<%= varibles.refreshtimeout %>">
                                            <input type="hidden" name="link-status" value="<%= varibles.linkstatus %>">
                                            <input type="hidden" name="server-address"
                                                value="<%= varibles.server_address %>">
                                            <input type="hidden" name="server-name" value="<%= varibles.server_name %>">
                                            <p class="m-t-20 text-center">
                                                Don't have an account? <a onclick="dontHaveAccount()">Sign Up</a>.
                                            </p>

                                        </form>


                    </div>
                </div> <!-- / .row -->
            </div> <!-- / .container -->
        </section>



        <script>
            const usernameInput = document.getElementById('username')
            usernameInput.addEventListener('focus', () => {
                usernameInput.classList.add('touched')
            })


            function dontHaveAccount(params) {
                document.account.submit()
            }



        </script>
    </body>

</html>